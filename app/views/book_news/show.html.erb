<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Book_news</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to book_news_path, class: button_class(theme: "transparent") do %>
      All Book_news
      <% end %>
      <%= link_to edit_book_news_path(@book_news), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Title:</p>
        <p><%= @book_news.title %></p>
      </li>
      <li>
        <p class="font-semibold">Author:</p>
        <p><%= @book_news.author %></p>
      </li>
      <li>
        <p class="font-semibold">Publisher:</p>
        <p><%= @book_news.publisher %></p>
      </li>
      <li>
        <p class="font-semibold">Year:</p>
        <p><%= @book_news.year %></p>
      </li>
      <li>
        <p class="font-semibold">Borrowed at:</p>
        <p><%= @book_news.borrowed_at %></p>
      </li>
      <li>
        <p class="font-semibold">Available:</p>
        <p><%= @book_news.available %></p>
      </li>
      <li>
        <p class="font-semibold">Subject:</p>
        <p><%= @book_news.subject %></p>
      </li>
  </ul>
</div>
